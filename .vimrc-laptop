" basic commands
syntax on
set number
set mouse=a
set laststatus=2
" set relativenumber

" force use hjkl
noremap <Up> <NOP>
noremap <Down> <NOP>
noremap <Left> <NOP>
noremap <Right> <NOP>

call plug#begin()
Plug 'preservim/nerdtree'
Plug 'morhetz/gruvbox'
Plug 'https://github.com/vim-airline/vim-airline'
Plug 'https://github.com/ryanoasis/vim-devicons'
call plug#end()

colo gruvbox
set background=dark

" toggle nerdtree
map <C-n> :NERDTreeToggle<CR>
